{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true, // Allow JavaScript files
		"checkJs": false, // Disable JS type-checking for speed
		"skipLibCheck": true, // Skip type-checking of third-party modules
		"strict": false, // Disable strict type checks
		"noEmit": true, // Prevent emitting JS files
		"noUnusedLocals": false, // Ignore unused local variables
		"noUnusedParameters": false, // Ignore unused function parameters
		"noImplicitAny": false, // Allow implicit any types
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": false,
		"incremental": true, // Enable incremental builds
		"disableSizeLimit": true, // Remove project size limitations
		"useUnknownInCatchVariables": false
	},
	"include": ["src/**/*.js", "src/**/*.svelte"],
	"exclude": ["node_modules", "build", ".svelte-kit", "**/*.spec.ts"]
}
